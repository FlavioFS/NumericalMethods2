sources = main.cpp sample.cpp simpsons13.cpp simpsons38.cpp trapezoidal.cpp

objects = main.o sample.o simpsons13.o simpsons38.o trapezoidal.o

edit : $(objects)
             g++ -o edit $(objects)
     
     main.o : main.c sample.h simpsons13.h simpsons38.h trapezoidal.h
             g++ -c main.cpp
     sample.o : sample.cpp sample.h
             g++ -c sample.cpp
     simpsons38.o : simpsons38.cpp simpsons38.h
             g++ -c simpsons38.cpp
     simpsons13.o : simpsons13.cpp simpsons13.h
             g++ -c simpsons13.cpp
     trapezoidal.o : trapezoidal.cpp trapezoidal.h
             g++ -c trapezoidal.cpp
     clean :
             rm edit $(objects)

